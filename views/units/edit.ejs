<%- include("../partials/header", {date: date}) %>

<div class="container" id="mainViewContainer">
	<div class="row">
		<div id="createTaskBody">
			<h1 id="headingCreateTask">
				Edit this <%=unit.name%> unit
			</h1>
			<form action="/unit/<%=unit._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="unit[name]" value="<%=unit.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="unit[image]" value="<%=unit.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="unit[checkinout]" value="<%=unit.checkinout%>">
				</div>
				<div class="form-group">
					<button class="btn btn-block btn_rectangle btn_add">
						Submit
					</button>
				</div>
		</form>
			<a id="backLink" href="/unit">Back to units</a>
		</div>	
	</div>
</div>

<%- include("../partials/footer") %>