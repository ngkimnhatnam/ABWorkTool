<%- include("../partials/header", {date: date}) %>
	<header class="jumbotron">
			<h1>You are viewing all available units</h1>
	</header>
	<div class="container" style="padding: 0;">
		<div class="row">
			<div class="col-3">
				<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
				  <a class="nav-link" href="<%=route.route%>">Add <%=route.name%></a>
				  <a class="nav-link" href="/task"> View Tasks</a>
				  <a class="nav-link" data-toggle="collapse" href="#collapseSetting" aria-expanded="true" aria-controls="collapseSetting">Settings</a>
					<div class="collapse" id="collapseSetting">
						<ul class="list-group list-group-flush">
							<li class="list-group-item list-group-item-action"><a class="nav-link" href="/change_password">Change password</a></li>
							<li class="list-group-item list-group-item-action"><a class="nav-link" href="/sort_option">Sorting options</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-9">
				<div class="row">
					<% units.forEach(function(unit){ %>
						<div class="col-md-6 col-xl-4" style="margin-bottom: 20px;">
							<div class="card h-100">
								<img src="<%= unit.image %>" class="card-img-top" alt="...">
								<div class="card-body">
									<h5 class="card-title"><%= unit.name %></h5>
									<p class="card-text">Check in/out time is: <%=unit.checkinout%></p>
									<a href="/unit/<%= unit._id %>" class="btn btn-primary">View unit</a>
									<% if(currentUser&&currentUser.isManager){%>
									<form action="/unit/<%=unit._id%>?_method=delete" method="POST" style="display: inline;">
										<button class="btn btn-danger">Delete</button>
									</form>
									<% } %>
					  			</div>
							</div>
						</div>
					<% }) %>
				</div>
			</div>
		</div>
	</div>

<%- include("../partials/footer") %>