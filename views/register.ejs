
<div class="container">
	<div class="row">
		<div style="width: 30%; margin: 25px auto;">
			<h1 style="text-align: center">
				Create new account
			</h1>
			<form action="/register" method="POST">
				<div class="form-group">
					<input class="form-control" type="email" name="username" placeholder="Your email:" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="Password" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="nickname" placeholder="The username you like to be called" required>
				</div>
				<div class="form-group">
					<div class="form-check">
					  <input class="form-check-input" type="checkbox" id="gridCheck" name="manager">
					  <label class="form-check-label" for="gridCheck">
						Register as manager
					  </label>
					</div>
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="master" placeholder="Manager code here">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Register
					</button>
				</div>
			</form>
		</div>	
	</div>
</div>

