<%- include("../partials/header", {date: date}) %>
	<header class="jumbotron">
			<h1>Good morning, sunshine</h1>
	</header>
	<div class="container">
		<div class="row">
			<div class="card text-center" style="width: 40%;margin: auto;">
				<div class="card-body border-style border border-dark">
				<h5 class="card-title"><%= task.date.toDateString() %></h5>
				<h6 class="card-subtitle mb-2 text-muted"><%= task.user.nickname %></h6>
				<p class="card-text">Following assigned units:</p> 
					<form action="/task/<%=task._id%>/status?_method=PUT" method="POST">
						<input name="date" value="<%=task.date%>" hidden>
						<input name="user" value="<%=task.user%>" hidden>
						<input name="unit" value="<%=task.unit%>" hidden>
						<input name="sidenote" value="<%=task.sidenote%>" hidden>
						
						<ul style="list-style: none;">
						
						<% task.unit.forEach(function(name){ %>
							<% if(name.status === "Not started"){ %>
								<li><%=name.name%> - <%=name.status%>
								<% if(currentUser&&currentUser.isManager === false&&task.date.getTime()>dateNow.getTime()){%>
									<button class="btn btn-secondary" name="nextTaskStatus" type="submit" value="<%=name._id%>">Start</button>
									<% } %>
								</li>
								<% } %>
							<% if(name.status === "In progress"){ %>
								<li><%=name.name%> - <%=name.status%>
								<% if(currentUser&&currentUser.isManager === false&&task.date.getTime()>dateNow.getTime()){%>
								<button class="btn btn-secondary" name="nextTaskStatus" type="submit" value="<%=name._id%>">Finish</button><% } %>
								</li>
								<% } %>
							<% if(name.status === "Cleaning done"){ %>
								<li><%=name.name%> - <%=name.status%>
								<% if(currentUser&&currentUser.isManager === false&&task.date.getTime()>dateNow.getTime()){%>
								<button class="btn btn-secondary" name="nextTaskStatus" type="submit" value="<%=name._id%>">Send keys</button><% } %>
								</li>
							<% } %>
							<% if(name.status === "All done"){ %>
								<li><%=name.name%> - <%=name.status%></li>
							<% } %>
						<% }) %>
						</ul>
					</form>
										
				<p class="card-text">
					Sidenote: <%= task.sidenote %>
				</p>
				<p class="card-text">
					Feedback:<br>
					<% task.feedback.forEach(function(feedback){ %>
					<%= feedback.content %> - "<%= feedback.author.nickname %>" -
					<br>
					<% }) %>
					
				</p>
				<% if(currentUser&&currentUser.isManager){%>
					<a href="/task/<%=task._id%>/edit" class="btn btn-warning">Edit task</a>
				<% } %>
				<a href="/task/<%=task._id%>/feedback" class="btn btn-success">Add feedback</a>
				</div>
			</div>
		</div>
		<a class="row" style="justify-content: center;" href="/task">Back to allocated tasks</a>
	</div>
<%- include("../partials/footer") %>