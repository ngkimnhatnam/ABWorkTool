<%- include("../partials/header", {date: date}) %>
	<header class="jumbotron" id="jumbo">
			<h1 id="pageName"><a class="navbar-brand" href="/" id="pageName">Password Change</a></h1>
	</header>
	<div class="container" id="mainViewContainer">
		<div class="row">
			<div class="col-4">
				<div class="nav flex-column nav-pills stickyNavButtons" id="v-pills-tab" role="tablist" aria-orientation="vertical">
					<% if(currentUser&&currentUser.isManager){%>
					<a class="nav-link" href="/task/">View tasks</a>
					<% } %>
					<a class="nav-link" href="/unit">View Units</a>
					<a class="nav-link" href="/history"> View History</a>
				  	<a class="nav-link" data-toggle="collapse" href="#collapseSetting" aria-expanded="true" aria-controls="collapseSetting">Settings</a>
					<div class="collapse" id="collapseSetting">
						<ul class="list-group" id="dropdownNavLinks">
							<li class="list-group-item list-group-item-action" id="dropdownNavLinks"><a class="nav-link" href="/change_password/<%=user._id%>">Change password</a></li>
							<li class="list-group-item list-group-item-action" id="dropdownNavLinks"><a class="nav-link" href="/sort_option">Sorting options</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-8">
				<div class="row">
					<div class="container">
						<h2 style="margin-bottom: 20px;">Change your password here:</h2>
						<form action="/change_password/<%=user._id%>?_method=PUT" method="POST">
							<div class="form-group">
								<input class="form-control" type="password" name="password" placeholder="New password:" required>
							</div>
							<div class="form-group">
								<input class="form-control" type="password" name="retype" placeholder="Confirm password:" required>
							</div>
							<div class="form-group">
								<button class="btn btn-block btn_rectangle btn_view">
									Change 
								</button>
							</div>
						</form>
					</div>
				</div>
			
			</div>
		</div>
	</div>
	

<%- include("../partials/footer") %>